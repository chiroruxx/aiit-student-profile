<header class="header navbar">
  <div class="container">
    <a class="header_title" href="<%= user_profiles_path %>">
      <h1 class="header_title__content">AIIT Student Profile</h1>
    </a>
    <nav>
      <ul class="header_menu nav navbar-nav navbar-right">
        <% if not ( params[:controller]=='user_profiles' && %w(new edit create).include?(params[:action]) ) %>
          <li>
          <%= link_to register_path do %>
              <span class="material-icons">edit</span>
              プロフを編集する
          <% end %>
          </li>
        <% elsif not ( params[:controller]=='user_profiles' && params[:action]=='list' ) %>
          <%= link_to register_path do %>
            <span class="material-icons">list</span>
            他のプロフを見る
          <% end %>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
